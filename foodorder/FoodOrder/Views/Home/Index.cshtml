@{
	ViewBag.Title = "Order";
}

<div id="bodyContainer" ng-app="FoodOrderApp">
	<section id="content">
		<div class="container">
			<div class="row">
				<div class="flip-container text-center col-md-12" ng-controller="OrderController" ng-init="init()">
					<div class="front">
						<input ng-model="order.name"/>
						<input ng-model="order.price"/>
						<input ng-model="order.category" />
						<button class="btn btn-info btn-lg" ng-click="save(order)" ng-disabled="working">Save</button>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>

@section scripts {
	@Scripts.Render("~/Scripts/angular.js")
	@Scripts.Render("~/Scripts/app/order-controller.js")
}